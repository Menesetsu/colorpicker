@import '../../src/styl/colorpicker.styl';
@import '../../lib/dropdown/src/styl/dropdown.styl';

.colorPicker {
	width: 25px;
	height: 25px;

	&--label {
		i {
			margin: 2px 6px 0 0;
			border: 1px solid;
			width: 9px;
			height: 13px;
		}

		&:before {
			absolute: top -1px left 100%;
			width: 6px;
			height: 8px;
			border: 1px solid;
			border-left: none;
		}

		&:after {
			absolute: left 100% bottom -2px;
			margin: 0 0 0 2px;
			width: 7px;
			height: 4px;
		}
	}
}
.dropDown {

	&-colorPicker {
		border-color: #c7d3d8;
		background: #23363E;
	}

	&-colorPicker & {
		&--option {
			border-color: #fff;

			&-selected,
			&:hover {
				box-shadow: inset 0 0 0 1px #000;
			}
		}
	}
}
.dropDown {

	&-colorPicker {
		margin: -10px 0 0 30px;
		padding: 3px;
		width: 200px;
		border: 1px solid;
		overflow: hidden;
		border-radius: 3px;
	}

	&-colorPicker & {

		&--list {
			overflow: hidden;
			padding:0;
			margin:0;
		}

		&--option {
			backface-visibility: hidden;
			float: left;
			display: inline-block;
			box-sizing: border-box;
			margin: 2px;
			border-style: solid;
			border-width: 0;
			width: 36px;
			height: 36px;
			cursor: pointer;

			&-selected,
			&:hover {
				border-width: 3px;
			}
		}
	}
}