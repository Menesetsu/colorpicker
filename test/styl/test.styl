@import '../../src/styl/colorpicker.styl';
@import '../../lib/dropdown/src/styl/dropdown.styl';
@import  'nib';

body {
	background: #000;
	color: #fff;
	font-family: Arial;
	font-size: 12px;
}

.colorPicker {
	width: 55px;
	height: 21px;

	&--label {

		.button {
			padding: 0;
			width: 100%;
			height: 100%;
			font-size: inherit;
			text-align: left;
			min-width: 100%;
			background-color: #4d4d4d;
			border: 0;

			&:focus,
			&:active {
				outline: none;
			}

			i {
				absolute: left 3px right 20px top 3px bottom 3px;
				box-shadow: inset 0 0 1px #000;
			}
		}


		&:before {
			content: "";
			absolute: top 50% right 6px;
			width: 0;
			height: 0;
			border-left: 4px solid transparent;
			border-right: 4px solid transparent;
			border-top: 4px solid #fff;
			margin-top: -2px;
			opacity: .7;
		}
	}

	&:hover {
		.colorPicker--label:before {
			opacity: 1;
		}
	}
}
.dropDown {
	&-colorPicker {

		margin-left: -1px;
		width: 322px;
		padding: 8px;
		border: 1px solid;
		box-sizing: border-box;
		overflow: hidden;
	}

	&-colorPicker & {

		&--list {
			overflow: hidden;
			padding:0;
			margin:0;
			list-style-type: none;
		}

		&--groupTitle {
			font-size: 10px;
			margin-bottom: 4px;
		}

		&--group {
			margin-bottom: 13px;
			ul {
				@extend .dropDown-colorPicker .dropDown--list;
				margin: 0 0 -4px -4px;
			}
			&:last-child {
				margin-bottom: 0;
			}
		}

		&--option {
			backface-visibility: hidden;
			float: left;
			box-sizing: border-box;
			margin: 0 0 4px 4px;
			width: 24px;
			height: 24px;
			cursor: pointer;
		}
	}
}

fieldset {
	border-color: #585858;
	margin-bottom: 20px
}

.dropDown {

	&-colorPicker {
		border-color: #1a1a1a;
		background: #3d3b39;
	}

	&-colorPicker & {
		&--option {
			&-selected,
			&:hover {
				box-shadow: inset 0 0 0 2px #fff
			}
		}

		&--groupTitle {
			color: #fff;
		}
	}
}


