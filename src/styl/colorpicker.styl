 .colorPicker {
	position: relative;
	display: inline-block;

	&--label {
		display: block;
		width: 100%;
		height: 100%;

		.button {
			width: 100%;
			height: 100%;
			text-indent: -2px;

			i {
				position: relative;
				display: inline-block;
				box-sizing: border-box;

				&:before {
					content: "";
					display: block;
					box-sizing: border-box;
					background-color: inherit;
				}

				&:after {
					content: "";
					display: block;
				}
			}
		}
	}

	input {
		display: none;
	}
}